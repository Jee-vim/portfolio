---
import { IS_WORK } from "../utils/constants.ts"
---
<header>
  <nav>
    <a class="a-none" href="/">Jaenudin</a>
    <p class="status">
      <span class={`status-indicator ${IS_WORK ? "is-on" : "is-off"}`}
      ></span>
      {IS_WORK ? "Available for work" : "Currently unavailable"}
    </p>
  </nav>
</header>

<style>
  nav {
    display:flex;
    align-items: center;
    justify-content: space-between;
  }
  a {
    font-weight: 500;
  }

  .status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .status-indicator {
    position: relative;
    width: 8px;
    height: 8px;
    background: var(--primary);
  }
  .status-indicator.is-off {
    opacity: 0.35;
  }

  .status-indicator.is-on::after {
    content: "";
    position: absolute;
    inset: 0;
    border: 1px solid var(--primary);
    opacity: 0.6;
    animation: square-ping 1s infinite ease-out;
  }
  @keyframes square-ping {
    0% {
      transform: scale(1);
      opacity: 0.6;
    }
    70% {
      transform: scale(3.2);
      opacity: 0;
    }
    100% {
      opacity: 0;
    }
  }
</style>
